.container
  .d-flex.justify-content-center.h-100
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .card
        .card-header
          %h3 Inscriere
        .card-body
          .input-group.form-group
            .input-group-prepend
              %span.input-group-text
                %i.fa.fa-envelope.color_white
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email"
          .input-group.form-group
            .input-group-prepend
              %span.input-group-text
                %i.fa.fa-key.color_white
            = f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Parola"
          .input-group.form-group
            .input-group-prepend
              %span.input-group-text
                %i.fa.fa-key.color_white
            = f.password_field :password_confirmation, autocomplete: "current-password", class: "form-control", placeholder: "Confirmarea parolei"
            = f.hidden_field :admin, value: false
            = f.hidden_field :manager, value: false
            = f.hidden_field :employee, value: true
          .form-group.add_padding_top_5
            = f.submit "Inscriere", class: "btn login_btn color_white"
        .card-footer
          .d-flex.justify-content-between
            = link_to "Parola uitata?", new_user_password_path, :method => :get, class: "link color_white"
            = link_to "Conectare", new_user_session_path, :method => :get, class: "link color_white"
