-content_for :head do
  = t ".head"

-content_for :mail do
  - if @user.first_name.present?
    %span{style: "color: black; text-decoration: none"}
      = "#{@user.first_name} #{@user.last_name}!"
  - else
    = link_to "#{@user.email}!", "#", :style => "color: black; text-decoration: none"

-content_for :content_head do
  = t ".content_head"

-content_for :content do
  %p Felicitari! Ai fost adaugat ca membru in aplicatia "Scenarii de conflicte".
  %p="Dupa autentificare te rugam sa iti completezi detaliile personale pentru a genera automat codul de scenariu. Iti poti confirma contul prin linkul de mai jos:".html_safe
  %p= link_to (t ".confirm_account"), confirmation_url(@user, confirmation_token: @user.confirmation_token), :style => "color: #0098c4; border-bottom:1px solid #0098c4; font-size:22px;  text-decoration: none"
